<%- include('../includes/head.ejs') %>
  <link rel="stylesheet" href="/css/forms.css">
  <link rel="stylesheet" href="/css/auth.css">
</head>
<body>
  <%- include('../includes/nav.ejs') %>
  <% if(valErrs.length > 0) { %>
  <div class="flash flash__error">
    Oops!
    <% valErrs.forEach(v => { %>
    <li><%= v.msg %></li>
    <% }) %>
  </div>
  <% } %>
  <% if(flashMsg.error) { %>
  <div class="flash flash__error">Oops!
    <li><%= flashMsg.error %></li>
  </div>
  <% } %>
  <main>
    <form class="login-form" action="/signup" method="POST">
      <div class="form-control">
        <label for="name">Name</label>
        <input
          class="<%= valErrs.find(v => v.param === 'name') ? 'invalid' : '' %>"
          type="text" name="name" id="name" value="<%= oldInputs.name %>" autofocus>
      </div>
      <div class="form-control">
        <label for="email">Email</label>
        <input
          class="<%= valErrs.find(v => v.param === 'email') ? 'invalid' : '' %>"
          type="text" name="email" id="email" value="<%= oldInputs.email %>">
      </div>
      <div class="form-control">
        <label for="password">Password</label>
        <input 
          class="<%= valErrs.find(v => v.param === 'password') ? 'invalid' : '' %>"
          type="password" name="password" id="password" value="<%= oldInputs.password %>">
      </div>
      <div class="form-control">
        <label for="confirmpassword">Confirm Password</label>
        <input
          class="<%= valErrs.find(v => v.param === 'confirmpassword') ? 'invalid' : '' %>" 
          type="password" name="confirmpassword" id="confirmpassword">
      </div>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <button class="btn" type="submit">Signup</button>
    </form>
  </main>
<%- include('../includes/end.ejs') %>
